{
  "cluster": {
    "workers": 4
  },
  "services": {
    "events": {
      "path": "./services/events"
    },
    "logger": {
      "path": "./services/logger",
      "options": {
        "transports": [
          { "name": "console", "timestamp": true, "colorize": true }
        ]
      }
    },
    "mongoose": {
      "path": "./services/mongoose",
      "options": {
        "host": "mongodb://localhost/devexp"
      },
      "dependencies": ["logger"]
    },
    "model": {
      "path": "./services/model",
      "options": {
        "addons": {
          "pull_request": [
            "../services/pull-request-github/addon"
          ]
        }
      },
      "dependencies": ["mongoose"]
    },
    "github": {
      "path": "./services/github",
      "options": {
        "host": "api.github.com",
        "debug": false,
        "version": "3.0.0",
        "protocol": "https",
        "timeout": 5000,
        "headers": {
          "user-agent": "DevKit-App"
        }
      },
      "dependencies": []
    },
    "badge-constructor": {
      "path": "./services/badge-constructor",
      "options": {
        "templatePath": "./assets/shields/"
      },
      "dependencies": ["logger"]
    },
    "team-github": {
      "path": "./services/team-github",
      "options": {
        "team": "owners"
      },
      "dependencies": [
        "github"
      ]
    },
    "choose-team": {
      "path": "./services/choose-team",
      "options": {
        "routes": [
          { "team-github": ["*/*"] }
        ]
      },
      "dependencies": [
        "logger",
        "team-github"
      ]
    },
    "pull-request-github": {
      "path": "./services/pull-request-github",
      "options": {
        "separator": {
          "top": "<div id='devexp-content-top'></div><hr>",
          "bottom": "<div id='devexp-content-bottom'></div>"
        }
      },
      "dependencies": [
        "github",
        "model"
      ]
    },
    "http": {
      "path": "./services/http",
      "options": {
        "port": "8080",
        "routes": {
          "/badges": "../services/badge-constructor/routes",
          "/github": "../services/pull-request-github/routes"
        }
      },
      "dependencies": [
        "events",
        "logger",
        "model",
        "badge-constructor",
        "pull-request-github"
      ],
      "alias": {
        "badge-constructor": "badge",
        "pull-request-github": "github"
      }
    },

    "command": {
      "path": "./services/command",
      "ignore": true,
      "options": {
        "events": ["github:issue_comment"],
        "commands": [
          {
            "regexp": "^\/start(\\W|$)",
            "handlers": ["../modules/review_commands/start"]
          },
          {
            "regexp": "^\/ok$|^ok$|^ок$|^\/ок$",
            "handlers": ["../modules/review_commands/ok"]
          },
          {
            "regexp": "^\/!ok$|^!ok$|^\/!ок$|^!ок$",
            "handlers": ["../modules/review_commands/not_ok"]
          },
          {
            "regexp": "^\/busy(\\W|$)",
            "handlers": ["../modules/review_commands/busy"]
          },
          {
            "regexp": "^\/change(\\W|$)",
            "handlers": ["../modules/review_commands/change"]
          }
        ]
      },
      "dependencies": [
        "events"
      ]
    },

    "review": {
      "path": "./services/review",
      "ignore": true,
      "options": {
        "stages": [
        ]
      },
      "dependencies": [
        "logger",
        "model",
        "events",
        "team"
      ]
    },

    "review_autoassign": {
      "path": "./services/review_autoassign",
      "ignore": true,
      "dependencies": [
        "logger",
        "events",
        "review"
      ]
    }
  }
}
