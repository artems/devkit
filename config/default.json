{
  "cluster": {
    "workers": 4
  },
  "services": {
    "http": {
      "path": "./services/http",
      "options": {
        "port": "8080"
      },
      "dependencies": [
        "badge",
        "logger"
      ]
    },
    "badge": {
      "path": "./services/badge",
      "options": {
        "templatePath": "./assets/shields/"
      },
      "dependencies": ["logger"]
    },
    "mongoose": {
      "path": "./services/mongoose",
      "options": {
        "host": "mongodb://localhost/devexp"
      },
      "dependencies": ["logger"]
    },
    "logger": {
      "path": "./services/logger",
      "options": {
        "transports": [
          { "name": "console", "timestamp": true, "colorize": true }
        ]
      }
    }
  }
}
