{
  "cluster": {
    "workers": 4
  },
  "services": {
    "http": {
      "path": "./services/http",
      "options": {
        "port": "8080",
        "routes": {
          "/github": "../services/github-pull-request/routes"
        }
      },
      "dependencies": [
        "events",
        "logger",
        "model",
        "github-pull-request"
      ],
      "alias": {
        "github-pull-request": "github"
      }
    },
    "team": {
      "path": "./services/team",
      "options": {
        "routes": [
          { "team_github": ["*/*"] }
        ]
      },
      "dependencies": [
        "logger",
        "team_github"
      ]
    },
    "team_github": {
      "path": "./services/team_github",
      "options": {
        "team": "owners"
      },
      "dependencies": [
        "github"
      ]
    },
    "review": {
      "path": "./services/review",
      "options": {
        "stages": [
        ]
      },
      "dependencies": [
        "logger",
        "model",
        "events",
        "team"
      ]
    },
    "badge": {
      "path": "./services/badge",
      "options": {
        "templatePath": "./assets/shields/"
      },
      "dependencies": ["logger"]
    },
    "github": {
      "path": "./services/github",
      "options": {
        "debug": false,
        "version": "3.0.0",
        "protocol": "https",
        "host": "api.github.com",
        "timeout": 5000,
        "headers": {
          "user-agent": "DevKit-App"
        },
        "separator": {
          "top": "<span id='devexp-content-top'></span><hr>",
          "bottom": "<span id='devexp-content-bottom'></span>"
        }
      },
      "dependencies": ["model"]
    },
    "github-pull-request": {
      "path": "./services/github-pull-request",
      "options": {
      },
      "dependencies": [
        "github",
        "model"
      ]
    },
    "model": {
      "path": "./services/model",
      "options": {
        "addons": {
          "pull_request": [
            "../modules/github-pull-request/addons/pull_request"
          ]
        }
      },
      "dependencies": ["mongoose"]
    },
    "mongoose": {
      "path": "./services/mongoose",
      "options": {
        "host": "mongodb://localhost/devexp"
      },
      "dependencies": ["logger"]
    },
    "logger": {
      "path": "./services/logger",
      "options": {
        "transports": [
          { "name": "console", "timestamp": true, "colorize": true }
        ]
      }
    },
    "events": {
      "path": "./services/events"
    },
    "review_autoassign": {
      "path": "./services/review_autoassign",
      "dependencies": [
        "logger",
        "events",
        "review"
      ]
    }
  }
}
