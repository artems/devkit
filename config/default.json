{
  "cluster": {
    "workers": 4
  },
  "services": {
    "http": {
      "path": "./services/http",
      "options": {
        "port": "8080"
      },
      "dependencies": [
        "logger"
      ]
    },
    "logger": {
      "path": "./services/logger",
      "options": {
        "transports": [
          { "name": "console", "timestamp": true, "colorize": true }
        ]
      }
    }
  }
}
