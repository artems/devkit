{
  "cluster": {
    "workers": 1
  },

  "services": {
  },

  "service_examples": {

    "events": {
      "path": "./services/events"
    },

    "logger": {
      "path": "./services/logger",
      "options": {
        "transports": []
      }
    },

    "http": {
      "path": "./services/http",
      "options": {
